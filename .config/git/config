[credential]
    helper     = cache

[core]
    editor     = nvim
    pager      = delta

[pager]
    diff       = delta
    log        = delta
    reflog     = delta
    show       = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[alias]
    lg         = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --decorate
    lb         = branch --sort=-authordate --format '%(align:width=18)%(authordate:format:%Y-%m-%d %H:%M)%(end) %(align:width=14,position=right)%(authordate:relative)%(end) %(objectname:short) %(HEAD) %(if)%(HEAD)%(then)%(color:green)%(end)%(refname:short)'
    search     = ! git branch -a | sed '/->/d' | sed 's/\\*//' | xargs git grep -n -I
    saveall    = !git add -A && git commit -m 'chore: commit save point'
    save       = !git commit -a -m 'chore: commit save point'
    ll         = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    stags      = !git for-each-ref --format='%(*committerdate:raw)%(committerdate:raw) %(refname) %(*objectname) %(objectname)' refs/tags | sort -n | cut -d'/' -f 3 | cut -d' ' -f 1
    aa         = add --all
    ba         = branch -a
    cm         = commit -m
    ds         = diff --staged
    check      = checkout
    pull       = pull origin
    push       = push origin
    ss         = status -sb
    s          = status
    r          = remote -v
    rmc        = rm --cached
    rs         = restore --staged

[init]
    templatedir = ~/.config/git/template

[merge]
    tool        = nvim
[pull]
    ff          = only

[mergetool]
    prompt      = false

