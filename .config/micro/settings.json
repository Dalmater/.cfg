{
    "aspell.dict": "en",
    "aspell.lang": "en",
    "aspell.sugmode": "fast",
    "backupdir": "~/.config/micro/backups",
    "basename": true,
    "colorscheme": "gruvbox-tc",
    "diffgutter": true,
    "filemanager.compressparent": false,
    "filemanager.showignored": false,
    "keepautoindent": true,
    "keymenu": true,
    "literate": false,
    "mkparents": true,
    "parsecursor": true,
    "permbackup": true,
    "relativeruler": true,
    "rmtrailingws": true,
    "savecursor": true,
    "saveundo": true,
    "scrollmargin": 1,
    "scrollspeed": 3,
    "softwrap": true,
    "statusformatr": "$(status.size) ",
    "tabmovement": true,
    "tabstospaces": true
}
