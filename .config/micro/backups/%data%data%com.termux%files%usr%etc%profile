	if [ -r $i ]; then
		. $i
	fi
done
unset i

# Source etc/bash.bashrc and ~/.bashrc also for interactive bash login shells:
if [ "$BASH" ]; then
        if [[ "$-" == *"i"* ]]; then
                if [ -r /data/data/com.termux/files/usr/etc/bash.bashrc ]; then
                        . /data/data/com.termux/files/usr/etc/bash.bashrc
                fi
                if [ -r /data/data/com.termux/files/home/.bashrc ]; then
                        . /data/data/com.termux/files/home/.bashrc
                fi
        fi
fi

# Source ~/.zshrc and ... also for interactive zsh login shells.
if [ "$ZSH" ]; then
        if [[ "$-" == *"i"* ]]; then
                if [ -r /data/data/com.termux/files/usr/etc/zshrc ]; then
                        . /data/data/com.termux/files/usr/etc/zshrc
                fi
                if [ -r /data/data/com.termux/files/home/.zshrc ]; then
                        , /data/data/com.termux/files/home/.zshrc
                fi
        fi
fi
